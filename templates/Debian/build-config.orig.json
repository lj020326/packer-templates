{
  "builders": [
    {
      "accelerator": "{{ user `qemu_accelerator` }}",
      "boot_command": [
        "{{ user `boot_command_prefix` }}",
        "{{ user `boot_command` }}",
        "<enter>"
      ],
      "boot_wait": "{{user `vm_boot_wait`}}",
      "cpus": "{{ user `vm_cpu_num` }}",
      "disk_interface": "virtio",
      "disk_size": "{{ user `disk_size` }}",
      "format": "qcow2",
      "headless": true,
      "http_directory": "{{user `vm_boot_http_directory`}}",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-{{ build_type }}-{{ timestamp }}",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'packer'|sudo -S bash 'shutdown.sh'",
      "ssh_handshake_attempts": "20",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "qemu",
      "vm_name": "{{user `vm_build_id`}}"
    },
    {
      "boot_command": [
        "{{ user `boot_command_prefix` }}",
        "{{ user `boot_command` }}",
        "<enter>"
      ],
      "boot_wait": "{{user `vm_boot_wait`}}",
      "cpus": "{{ user `vm_cpu_num` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "Debian_64",
      "hard_drive_interface": "{{ user `disk_adapter_type` }}",
      "headless": true,
      "http_directory": "{{user `vm_boot_http_directory`}}",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-{{ build_type }}-{{ timestamp }}",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'packer'|sudo -S bash 'shutdown.sh'",
      "ssh_handshake_attempts": "20",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "virtualbox-iso",
      "vm_name": "{{user `vm_build_id`}}"
    },
    {
      "boot_command": [
        "{{ user `boot_command_prefix` }}",
        "{{ user `boot_command` }}",
        "<enter>"
      ],
      "boot_wait": "{{user `vm_boot_wait`}}",
      "cpus": "{{ user `vm_cpu_num` }}",
      "disk_adapter_type": "{{ user `disk_adapter_type` }}",
      "disk_size": "{{ user `disk_size` }}",
      "disk_type_id": 0,
      "guest_os_type": "debian8-64",
      "headless": true,
      "http_directory": "{{user `vm_boot_http_directory`}}",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-{{ build_type }}-{{ timestamp }}",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'packer'|sudo -S bash 'shutdown.sh'",
      "ssh_handshake_attempts": "20",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{ user `ssh_username` }}",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{user `vm_build_id`}}",
      "vmx_data": {
        "ethernet0.pciSlotNumber": "32"
      },
      "vmx_remove_ethernet_interfaces": true
    },
    {
      "name": "vsphere-iso",
      "type": "vsphere-iso",
      "boot_command": [
        "{{ user `boot_command_prefix` }}",
        "{{ user `boot_command` }}",
        "<enter>"
      ],
      "boot_wait": "{{user `vm_boot_wait`}}",
      "boot_order": "{{user `vm_boot_order_install`}}",
      "boot_keygroup_interval": "{{user `vm_boot_keygroup_interval`}}",
      "http_directory": "{{user `vm_boot_http_directory`}}",
      "ip_wait_timeout": "{{user `ip_wait_timeout`}}",
      "ip_settle_timeout": "{{user `ip_settle_timeout`}}",
      "vcenter_server": "{{user `vcenter_host`}}",
      "username": "{{user `vcenter_username`}}",
      "password": "{{user `vcenter_password`}}",
      "insecure_connection": "true",
      "datacenter": "{{user `vcenter_datacenter`}}",
      "cluster": "{{user `vcenter_cluster`}}",
      "datastore": "{{user `vm_datastore`}}",
      "folder": "{{user `vcenter_folder`}}",
      "vm_name": "{{user `vm_build_id`}}",
      "host": "{{user `vm_host`}}",
      "notes": "{{user `vm_build_notes`}}",
      "convert_to_template": true,
      "communicator": "ssh",
      "configuration_parameters": {
        "bios.bootDelay": "5000",
        "bootOrder": "{{user `vm_boot_order`}}"
      },
      "iso_paths": [
        "[{{user `vm_remote_cache_datastore`}}] {{user `iso_base_dir`}}/{{user `iso_dir`}}/{{user `iso_file`}}"
      ],
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "ssh_handshake_attempts": "{{user `ssh_handshake_attempts`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_pty": "{{user `ssh_pty`}}",
      "guest_os_type": "{{user `vm_guest_os_type`}}",
      "CPUs": "{{user `vm_cpu_num`}}",
      "RAM": "{{user `vm_mem_size`}}",
      "RAM_reserve_all": false,
      "disk_controller_type": "{{user `vm_disk_type`}}",
      "storage": [
        {
          "disk_size": "{{user `vm_disk_size`}}",
          "disk_thin_provisioned": "{{user `vm_disk_thin_provisioned`}}"
        }
      ],
      "network_adapters": [
        {
          "network": "{{user `vm_network_mgt`}}",
          "network_card": "{{user `vm_network_card`}}"
        }
      ]
    }
  ],
  "post-processors": [
    [
      {
        "compression_level": "{{ user `compression_level` }}",
        "output": "{{ user `vm_name` }}-{{.Provider}}-{{ timestamp }}.box",
        "type": "vagrant",
        "except": ["vsphere-iso"]
      },
      {
        "output": "manifest.json",
        "strip_path": true,
        "type": "manifest"
      }
    ]
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_username`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "_common/scripts/base.sh",
        "_common/scripts/vmware.sh",
        "_common/scripts/sshd.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_username`}}' | {{.Vars}} sudo -H -S -E bash '{{.Path}}'",
      "scripts": [
        "_common/scripts/ansible.sh"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo '{{user `ansible_vault_password`}}' > ~/.vault_pass",
        "chmod 600 ~/.vault_pass"
      ]
    },
    {
      "type": "ansible-local",
      "clean_staging_directory": "false",
      "playbook_dir": "../ansible",
      "playbook_file": "../ansible/vm_template.yml",
      "galaxy_file": "../ansible/roles/requirements.yml",
      "inventory_groups": "{{ user `ansible_inventory_groups` }}",
      "group_vars": "../ansible/group_vars",
      "extra_arguments": [
        "--vault-password-file=~/.vault_pass"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_username`}}' | {{.Vars}} sudo -H -S -E bash '{{.Path}}'",
      "skip_clean": "true",
      "expect_disconnect": "true",
      "script": "_common/scripts/reboot.sh"
    },
    {
      "type": "inspec",
      "pause_before": "360s",
      "timeout": "60m",
      "extra_arguments": [
        "--no-distinct-exit"
      ],
      "inspec_env_vars": [
        "CHEF_LICENSE=accept"
      ],
      "profile": "../inspec"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_username`}}' | {{.Vars}} sudo -H -S -E bash '{{.Path}}'",
      "scripts": [
        "_common/scripts/cleanup.sh",
        "_common/scripts/zerodisk.sh"
      ]
    }
  ],
  "variables": {
    "boot_command_prefix": "",
    "box_tag": "",
    "compression_level": "6",
    "disk_adapter_type": "scsi",
    "disk_size": "36864",
    "inspec_timeout": "50m",
    "iso_checksum": "",
    "iso_checksum_type": "sha256",
    "iso_url": "",
    "iso_dir": "",
    "iso_file": "",
    "memory": "1024",
    "pause_before_inspec": "360s",
    "qemu_accelerator": "hvf",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "vagrant_cloud_token": "",
    "vagrant_cloud_username": "",
    "vm_cpu_num": "1",
    "vm_name": ""
  }
}
